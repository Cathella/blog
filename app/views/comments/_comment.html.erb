<% unless comment.archived? %>
  <div class="comment">
    <p class="flex-item">
      <%= comment.commenter %> says:
      <%= link_to "Delete", [comment.article, comment], data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %>
    </p>
    <p>
      <%= comment.body %>
    </p>
  </div>
<% end %>